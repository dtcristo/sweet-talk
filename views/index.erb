<!DOCTYPE html>
<html>
<head>
  <title>Sweet Talk</title>
  <!-- jQuery -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.js"></script>
  <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css">
  <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.js"></script>
  <!-- Bootstrap -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.js"></script>
  <!-- local -->
  <link rel="stylesheet" href="/css/index.css">
  <script src="/coffee/index.js"></script>
</head>
<body>
  <div id="content" class="container-fluid">
    <div id="header" class="container-fluid">
      <h3>Sweet Talk</h3>
    </div>
    <div id="messages" class="well">
    <% $messages.each do |message| %>
      <%= "<p><b>#{message['name']}:</b> #{message['text']}</p>" %>
    <% end %>
    </div>
    <div id="controls" class="container-fluid">
      <form>
        <div id="name-group">
          <input id="name" type="text" name="name" value="Guest" class="form-control">
        </div>
        <input id="send" type="submit" value="Send" class="btn btn-default">
        <div id="text-group" class="form-group">
          <input id="text" type="text" name="text" class="form-control">
        </div>
      </form>
    </div>
  </div>
</body>
</html>
